{
  "name": "examples",
  "version": "3.0.0",
  "description": "Sample applications",
  "type": "module",
  "author": "Eric Law <eric.law@accenture.com>",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "node clean.js",
    "preload": "node generate-preloader.js",
    "prebuild": "npm run lint",
    "build": "npm run preload && tsc -p tsconfig.json && node copy-static-files.js",
    "build:watch": "tsc -w -p tsconfig.json",
    "lint": "eslint -c eslint.json . --ext .ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "jest --watch",
    "start": "nodemon --esm src/hello-world.ts"
  },
  "devDependencies": {
    "@jest/globals": "^29.5",
    "@jest/types": "^29.5",
    "@types/jest": "^29.5.2",
    "@types/node": "^17.0.23",
    "@types/shelljs": "0.8.8",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "~8.5",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "~26.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.6.1",
    "shelljs": "0.8.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsutils": "~3.21",
    "typescript": "~5.0"
  },
  "dependencies": {
    "mercury": "github:accenture/mercury-nodejs"
  }
}
